@{
    ViewData["Title"] = "Upload file";
}

<form method="post" enctype="multipart/form-data" asp-controller="Upload" asp-action="Index">
    <div class="form-group">
        <div class="input-group input-file" name="Fichier1">
            <input type="file" name="file" class="form-control" placeholder='Choose a file...' />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" class="btn btn-primary btn-sm" value="Upload" />
        </div>
    </div>
</form>
